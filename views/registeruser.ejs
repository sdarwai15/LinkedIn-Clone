<% include ./partials/header.ejs %>
<div id="registerbox">
	<nav style="width: 100%;height: 80px; background:#FFFFFF;">
		<div style="width: 60%;height: 100%; margin-left: 30px;">
			
			<img style="height: 100%;" src="../images/download.png" alt="">
			
		</div>
		
		
	</nav>
	<div id="centerformdiv">
		<h3 style='text-align: center; color: rgb(52, 52, 190); font-size: 29px;'>Register as a user</h3>
		<form action="/register/user" enctype="multipart/form-data" method="post">
			<input type="file" name="profileimg" required>
			<input type="text" name="name" placeholder="Enter your name" style=" width: 100%;">
			<br>
			<input type="text" name="username" placeholder="Enter your username" style=" width: 100%;">
			<br><input type="email" name="email" placeholder="Enter your email" style=" width: 100%;">
			<br><input type="password" name="password" placeholder="Enter your password" style=" width: 100%;">
			<br>
			<input type="number" name="contact" placeholder="Enter your contact number" style=" width: 100%;"><br>
			<input type="radio" name="gender" value="male">Male
			<input style="margin-left: 10px;" type="radio" name="gender" value="female">Female
			<input type="date" name="DOB"><br>
			<input type="text" name="location" placeholder="Enter your location" style=" width: 100%;">
			<input type="text" name="headline" placeholder="your headline" style=" width: 100%;">
			<input type="submit" value="Register" style="background-color: rgb(75, 73, 214); width: 100%; text-align: center; color: white;">
		</form>
		
	</div>
</div>
